<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head")%>
        <link rel="stylesheet" href="/css/chat/chatStyles.css" />
        <link rel="stylesheet" href="/css/chat/statusIndicator.css" />
        <title>All Chats</title>
    </head>
    <body>
        <%- include("../partials/navbar")%>
        <main>
            <div class="container">
                <div class="columns">
                    <div class="column"></div>
                    <div class="column is-three-quarters">
                        <h1 class="title mb-2 main-title mt-2">Welcome to your chats!</h1>
                        <form action="/chats/closed" class="mb-3">
                            <div class="field has-addons">
                                <div class="control is-expanded">
                                    <input class="input" type="text" placeholder="Search if your question has already been answered!" name="q" />
                                </div>
                                <div class="control">
                                    <button class="button is-info">Search</button>
                                </div>
                            </div>
                        </form>
                        <% if (userRole == "U") { %>
                        <form action="/chats/create/<%= userID%>" class="mb-2 create-new-chat-form mt-2" method="POST">
                            <input type="hidden" name="question" id="question" />
                            <div class="field"><button class="button is-primary">Start a new chat</button></div>
                        </form>
                        <% } %>

                        <div class="fixed-grid has-1-cols mt-2">
                            <div class="grid">
                                <% if (chatData.length == 0) { %>
                                <h2 class="subtitle">You have no chats. Press the button above to start one!</h2>
                                <% } else { %> <%for (const c of chatData) {%>
                                <div class="cell">
                                    <%- include("./partials/chatCard", {chatID: c.chat_id, helpeeID: c.helpee_id, username: c.username, status:
                                    c.chat_status, createdDateTime: c.created_date_time, lastActivityDateTime: c.last_activity_date_time, title:
                                    c.title, userID }) %>
                                </div>
                                <%}%> <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="column"></div>
                </div>
            </div>
        </main>
        <%- include("../partials/footer.ejs")%>
        <script src="/js/deleteContent.js" data-class-of-form-to-look-for="delete-chat-form" data-class-of-element-to-hide="chat-card"></script>
        <script src="/js/chat/createNewChat.js"></script>
        <script src="https://kit.fontawesome.com/fe51342540.js" crossorigin="anonymous"></script>
        <script src="/js/chat/dropdownToggle.js"></script>
    </body>
</html>
