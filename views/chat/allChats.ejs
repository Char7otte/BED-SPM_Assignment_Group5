<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head")%>
        <link rel="stylesheet" href="/css/chat/statusIndicator.css" />
        <title>All Chats</title>
    </head>
    <body>
        <%- include("../partials/navbar")%>
        <main>
            <div class="container">
                <div class="columns">
                    <div class="column"></div>
                    <div class="column is-three-quarters">
                        <h1 class="title">Chats</h1>
                        <form action="/chats/create/<%= userID%>" class="mb-5 create-new-chat-form" method="POST">
                            <input type="hidden" name="question" id="question" />
                            <div class="field"><button class="button is-primary">Start a new chat</button></div>
                        </form>

                        <div class="fixed-grid has-1-cols">
                            <div class="grid">
                                <% if (chatData.length == 0) { %>
                                <h2>You have no chats. Press the button above to start one!</h2>
                                <% } else { %> <%for (const c of chatData) {%>
                                <div class="cell">
                                    <%- include("./partials/chatCard", {chatID: c.chat_id, helpeeID: c.helpee_id, username, status: c.chat_status,
                                    createdDateTime: c.created_date_time, lastActivityDateTime: c.last_activity_date_time, title: c.title }) %>
                                </div>
                                <%}%> <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="column"></div>
                </div>
            </div>
        </main>
        <%- include("../partials/footer.ejs")%>
        <script src="/js/deleteContent.js" data-class-of-form-to-look-for="delete-chat-form" data-class-of-element-to-hide="chat-card"></script>
        <script src="/js/chat/createNewChat.js"></script>
    </body>
</html>
